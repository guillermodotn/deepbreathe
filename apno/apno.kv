#:kivy 2.3.0

#:import AppBar apno.widgets.app_bar.AppBar
#:import NavDrawerContainer apno.widgets.nav_drawer.NavDrawerContainer

#:import AboutScreen apno.screens.about_screen.AboutScreen
#:import CO2Screen apno.screens.co2_screen.CO2Screen
#:import FreeScreen apno.screens.free_screen.FreeScreen
#:import HomeScreen apno.screens.home_screen.HomeScreen
#:import O2Screen apno.screens.o2_screen.O2Screen
#:import SettingsScreen apno.screens.settings_screen.SettingsScreen


FloatLayout:
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        pos: root.pos
        size: root.size

        AppBar:
            id: appbar

        ScreenManager:
            id: screen_manager

            HomeScreen:
                name: "home"

            O2Screen:
                name: "o2_screen"

            CO2Screen:
                name: "co2_screen"

            FreeScreen:
                name: "free_screen"

            SettingsScreen:
                name: "settings_screen"

            AboutScreen:
                name: "about_screen"

    NavDrawerContainer:
        id: nav_drawer
        pos: root.pos
        size: root.size
