#:kivy 2.3.1
BoxLayout:
    orientation: "vertical"
    CustomAppBar:
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            HomeScreen:
                name: "home"
            O2Screen:
                name: "o2_screen"
            CO2Screen:
                name: "co2_screen"
            SettingsScreen:
                name: "settings_screen"

        MDNavigationDrawer:
            id: nav_drawer
            anchor: "left"
            MDNavigationDrawerMenu:
                MDNavigationDrawerItem:
                    on_release: app.change_screen("home")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "home"

                    MDNavigationDrawerItemText:
                        text: "Home"

                MDNavigationDrawerDivider:
                MDNavigationDrawerItem:
                    on_release: app.change_screen("o2_screen")
                    MDNavigationDrawerItemText:
                        text: "O2"

                    MDNavigationDrawerItemTrailingText:
                        text: "streak 24"
                
                MDNavigationDrawerItem:
                    on_release: app.change_screen("co2_screen")
                    MDNavigationDrawerItemText:
                        text: "CO2"

                    MDNavigationDrawerItemTrailingText:
                        text: "streak 13"
                
                MDNavigationDrawerDivider:
                MDNavigationDrawerItem:
                    on_release: app.change_screen("settings_screen")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "cog"

                    MDNavigationDrawerItemText:
                        text: "Settings"
                    
                MDNavigationDrawerItem:
                    on_release: app.change_screen("about_screen")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "information"

                    MDNavigationDrawerItemText:
                        text: "About"

                    MDNavigationDrawerItemTrailingText:
                        text: "1.0.0"
                   