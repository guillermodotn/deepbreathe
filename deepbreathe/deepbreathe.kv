#:kivy 2.3.1

#:import MDNavigationDrawer kivymd.uix.navigationdrawer.MDNavigationDrawer
#:import MDNavigationDrawerDivider kivymd.uix.navigationdrawer.MDNavigationDrawerDivider
#:import MDNavigationDrawerItem kivymd.uix.navigationdrawer.MDNavigationDrawerItem
#:import MDNavigationDrawerMenu kivymd.uix.navigationdrawer.MDNavigationDrawerMenu
#:import MDNavigationLayout kivymd.uix.navigationdrawer.MDNavigationLayout

#:import MDScreenManager kivymd.uix.screenmanager

#:import AboutScreen deepbreathe.screens.about_screen
#:import CO2Screen deepbreathe.screens.co2_screen
#:import HomeScreen deepbreathe.screens.home_screen
#:import O2Screen deepbreathe.screens.o2_screen
#:import SettingsScreen deepbreathe.screens.settings_screen
#:import CustomAppBar deepbreathe.widgets.custom_appbar
#:import CustomButton deepbreathe.widgets.custom_button
#:import CustomNavDrawer deepbreathe.widgets.custom_navdrawer


BoxLayout:
    orientation: "vertical"
    CustomAppBar:
        id: appbar
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            HomeScreen:
                name: "home"
            O2Screen:
                name: "o2_screen"
            CO2Screen:
                name: "co2_screen"
            SettingsScreen:
                name: "settings_screen"
            AboutScreen:
                name: "about_screen"

        CustomNavDrawer:
            id: nav_drawer
            anchor: "left"