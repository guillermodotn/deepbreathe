#:kivy 2.3.1
BoxLayout:
    orientation: "vertical"
    CustomAppBar:
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            HomeScreen:
                name: "home"
            O2Screen:
                name: "o2_screen"
            CO2Screen:
                name: "co2_screen"

        MDNavigationDrawer:
            id: nav_drawer
            anchor: "left"
            MDNavigationDrawerMenu:
                MDNavigationDrawerItem:
                    on_release: app.change_screen("home")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "home"

                    MDNavigationDrawerItemText:
                        text: "Inbox"

                    MDNavigationDrawerItemTrailingText:
                        text: "24"
                MDNavigationDrawerDivider:
                MDNavigationDrawerItem:
                    on_release: app.change_screen("o2_screen")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "o2"

                    MDNavigationDrawerItemText:
                        text: "O2"

                    MDNavigationDrawerItemTrailingText:
                        text: "24"
                
                MDNavigationDrawerItem:
                    on_release: app.change_screen("co2_screen")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "co2"

                    MDNavigationDrawerItemText:
                        text: "CO2"

                    MDNavigationDrawerItemTrailingText:
                        text: "24"
                
                MDNavigationDrawerDivider:
                MDNavigationDrawerItem:
                    on_release: app.change_screen("settings_screen")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "settings"

                    MDNavigationDrawerItemText:
                        text: "Settings"

                    MDNavigationDrawerItemTrailingText:
                        text: "24"
                    
                MDNavigationDrawerItem:
                    on_release: app.change_screen("about_screen")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "about"

                    MDNavigationDrawerItemText:
                        text: "About"

                    MDNavigationDrawerItemTrailingText:
                        text: "24"
                   